{
	"name": "auth",
	"resources": [{
		"name": "users",
		"pattern": "/users",
		"cases": [{
			"given": {"mongodb": "some users", "nsq": "some messages"},
			"when": {"method": "GET", "path": "/users"},
			"then": {"code": 200, "content": "[{\"id\": \"32\"}]"},
			"while": [{"method": "GET", "id": "auth:user"}]
		},{
			"when": {"method": "POST", "path": "/users"},
			"then": {"code": 201, "content": "{\"id\": \"33\"}"},
			"while": [{"method": "GET", "id": "auth:user"}]
		}]
	},{
		"name": "user",
		"pattern": "/users/:user_id",
		"cases": [{
			"when": {"method": "GET", "path": "/users/32"},
			"then": {"code": 200, "content": "{\"id\": \"32\"}"}
		}]
	}]
}