{
	"deps": {
		"github.com/dockpit/ex-store-customers": ["8000:4321"]
	},
	"states": {
		"mysql": {
			"ports": ["3306:3306"],
			"ready_timeout": "10s"
		},
		"mongodb": {
			"ports": ["27017:27017"],
			"ready_pattern": ".*waiting.*",
			"ready_timeout": "10s",
			"command": ["--nojournal"]
		}
	},
	"run": {
		"command": ["ls", "-la"],
		"dir": ".."
	}
}